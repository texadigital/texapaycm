{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "proxy": "node proxy/index.js",
        "dev:all": "concurrently -k -n PROXY,LARAVEL,NEXT -c blue,green,magenta \"npm:proxy\" \"php artisan serve --host=127.0.0.1 --port=8000\" \"npm --prefix pwa run dev\"",
        "smoke": "bash scripts/smoke.sh"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "express": "^4.19.2",
        "http-proxy-middleware": "^3.0.2",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    }
}
